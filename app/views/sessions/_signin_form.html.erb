
        <%= simple_form_for(:session, url: sessions_path, :remote=>true) do |f| %>
              <div>
                <div>
                  <p>No account? Sign Up today! It's super easy</p>
                  <%= link_to "Sign Up", new_user_path%>
                  <%= link_to "Reset Password", new_password_reset_path %>
                </div>
              </div>
              <div class="span5">
                <fieldset id="inputs">
                  <%= f.input :email, label: false, wrapper: :prepend do %>
                      <%= f.input_field :email, placeholder: "Email (reqd)"%>
                  <% end %>
                  <%= f.input :password, placeholder: "Password (reqd)", label: false, wrapper: :prepend do  %>
                      <%= f.input_field :password, placeholder: "Password (reqd)", class: "password"%>
                  <% end %>
                </fieldset>
                <fieldset id="submit">
                  <%= f.button :submit, "Sign In", :id=>'submit', class: 'btn-warning' %>
                </fieldset>
              </div>
        <% end %>
